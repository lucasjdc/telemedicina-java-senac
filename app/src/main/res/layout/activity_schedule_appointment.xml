<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Consulta"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_nomeMedico_schedule_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="MÃ©dico"
            android:inputType="text"
            android:focusable="false" android:clickable="false" />

        <EditText
            android:id="@+id/editText_nomePaciente_schedule_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Paciente"
            android:inputType="text" />

        <EditText
            android:id="@+id/editText_idadePaciente_schedule_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Idade do paciente"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_data_schedule_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Data da consulta"
            android:inputType="date" />

        <Button
        android:id="@+id/btn_agendar_schedule_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Agendar" />

        <Button
            android:id="@+id/btn_back_schedule_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Voltar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>